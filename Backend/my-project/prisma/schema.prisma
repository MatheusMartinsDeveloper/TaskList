generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  isDone      Boolean   @default(false)
  dueData     DateTime?
  priority    Priority
  createdAt   DateTime
  updatedAt   DateTime  @updatedAt
}

enum Priority {
  Baixa
  Media
  Dificil
}